root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
tab_width                = 4
max_line_length          = 120

[*.{html,xml}]
indent_size              = 4
indent_style             = space

[*.{inc,php}]
indent_size              = 4
indent_style             = tabs

[*.{sh,yml}]
indent_size              = 2
indent_style             = space

[*.md]
indent_style             = space

[*.patch]
trim_trailing_whitespace = false
